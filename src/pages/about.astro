---
import MarkdownLayout from "../layouts/MarkdownLayout.astro";
import { __ } from "../utils/i18n";

const about = await Astro.glob("./about.mdx");
const frontmatter = about[0].frontmatter;
const Content = about[0].Content;
---

<MarkdownLayout
  post={{
    title: frontmatter.title ?? __("about"),
    description: frontmatter.description ?? "",
    pubDate: frontmatter.pubDate ? new Date(frontmatter.pubDate) : new Date(),
  }}
  url="/about"
>
  <Content />
</MarkdownLayout>
