---
import { getCollection } from "astro:content";
import HeaderLink from "./HeaderLink.astro";
import { __ } from "../utils/i18n";
import { SITE, BASE_URL, MENU, BANNER, BANNER_SRCSET } from "../utils/config";
import RssBtn from "./RssBtn";
import SearchBtn from "./SearchBtn";
import ThemeBtn from "./ThemeBtn";
import SearchBox from "./SearchBox";
import { Icon } from "astro-icon/components";

type Props = {
  title?: string;
  cover?: string;
};

const isOuterLink = (url: string) => {
  return (
    url.startsWith("http://") ||
    url.startsWith("https://") ||
    url.startsWith("//")
  );
};

const { title = SITE.title, cover } = Astro.props;
const posts = await getCollection("blog");
---

<div id="header-nav">
  <nav id="main-nav">
    {
      MENU.map((item) => (
        <HeaderLink href={`${BASE_URL}${item.url}`} aria-label={item.name}>
          {__(item.name)}
        </HeaderLink>
      ))
    }
    <span
      id="main-nav-toggle"
      class="nav-icon"
      aria-label="Toggle navigation"
      role="button"
    >
      <Icon name="fa6-solid:bars" size={14} />
    </span>
  </nav>
  <nav id="sub-nav" aria-label="Secondary navigation">
    <RssBtn client:load url={BASE_URL} className="nav-icon" />
    <SearchBtn client:load className="nav-icon" />
    <ThemeBtn client:load className="nav-icon" />
  </nav>
</div>
<header id="header">
  {
    cover ? (
      <img
        src={isOuterLink(cover) ? cover : `${BASE_URL}${cover}`}
        alt={title}
        fetchpriority="high"
      />
    ) : BANNER_SRCSET.enable ? (
      <picture style="user-select: none;">
        {BANNER_SRCSET.srcset.map((source) => (
          <source
            media={source.media}
            srcset={
              isOuterLink(source.src) ? source.src : `${BASE_URL}${source.src}`
            }
          />
        ))}
        <img
          src={isOuterLink(BANNER) ? BANNER : `${BASE_URL}${BANNER}`}
          alt={title}
          fetchpriority="high"
        />
      </picture>
    ) : (
      <img
        src={isOuterLink(BANNER) ? BANNER : `${BASE_URL}${BANNER}`}
        alt={title}
        fetchpriority="high"
      />
    )
  }
  <div id="header-outer" class="outer">
    <div id="header-title" class="inner">
      <slot />
    </div>
  </div>
</header>
<SearchBox client:load searchList={posts} url={BASE_URL} />

<script>
  let oldScrollTop = 0;
  window.addEventListener("scroll", () => {
    let scrollTop =
      document.documentElement.scrollTop || document.body.scrollTop;
    let diffY = scrollTop - oldScrollTop;
    window.diffY = diffY;
    oldScrollTop = scrollTop;
    if (diffY < 0) {
      document
        .getElementById("header-nav")!
        .classList.remove("header-nav-hidden");
    } else {
      document.getElementById("header-nav")!.classList.add("header-nav-hidden");
    }
  });
</script>

<style lang="stylus">
  #header-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: center;
    background: var(--color-header-background);
    box-shadow: var(--shadow-card);
    transition: background 1s, top 0.3s;
    z-index: 200;
    &.header-nav-hidden {
      top: -80px;
    }
    &:hover {
      background: rgba(255, 255, 255, 0.95);
    }
  }

  #main-nav {
    display: flex;
    align-items: center;
  }

  #header {
    min-height: 400px;
    height: 35vh;
    position: relative;

    img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 180%;
      z-index: -2;
      user-select: none;
      display: block;
      object-fit: cover;
      transition: 0.3s;
      -webkit-mask: linear-gradient(to top, transparent, #fff 50%);
      mask: linear-gradient(to top, transparent, #fff 50%);

      @media screen and (max-width: 959px) {
        height: 120%;
      }

      @media screen and (max-width: 767px) {
        height: 100%;
      }
    }
  }

  #header-outer {
    height: 100%;
    position: relative;
    max-width: 100%;
  }


  #main-nav-toggle {
    display: none;

    @media screen and (max-width: 767px) {
      display: block;
    }
  }

  :global(.nav-icon) {
    color: var(--red-0);
    opacity: 0.8;
    text-decoration: none;
    transition: 0.2s;
    padding: 20px 15px;
    text-align: center;
    font-size: 14px;
    width: 14px;
    height: 14px;
    will-change: transform;

    &:hover {
      opacity: 1;
      transform: scale(1.1);
    }
  }

  :global([data-theme='dark']) {
    #header-nav:hover {
      background: var(--color-header-background);
    }

    :global(.nav-icon) {
      color: var(--red-2);
    }
  }

  #header-title {
    font-weight: 700;
    text-align: center;
    position: absolute;
    top: 50%;
    margin: 40px * -0.5 2.5% 0;
    width: 95%;
    opacity: 0;
    filter: blur(8px);
    will-change: transform, opacity, filter;
    animation: fade-in-blur 800ms ease-out 200ms forwards;
  }

  #sub-nav {
    display: flex;
    align-items: center;
  }

  @keyframes fade-in-blur {
    0% {
      opacity: 0;
      filter: blur(10px);
    }

    100% {
      opacity: 1;
      filter: blur(0);
    }
  }
</style>
