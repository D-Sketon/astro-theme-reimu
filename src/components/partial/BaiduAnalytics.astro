---
type Props = {
  id: string;
}

const { id } = Astro.props;
---

<script async is:inline data-transition src={`https://hm.baidu.com/hm.js?${id}`}
></script>

<script is:inline>
  var _hmt = _hmt || [];
  document.addEventListener("astro:after-swap", () => {
    _hmt.push(["_trackPageview", location.pathname]);
  });
</script>
