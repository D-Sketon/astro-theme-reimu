---
import { VALINE, WALINE, GITALK } from "../../utils/config";
import ValineComment from "./ValineComment.astro";
import WalineComment from "./WalineComment.astro";
import GitalkComment from "./GitalkComment.astro";

type Props = {
  comment: boolean;
};

const { comment } = Astro.props;
---

{comment && VALINE.enable && <ValineComment />}
{comment && WALINE.enable && <WalineComment />}
{comment && GITALK.enable && <GitalkComment />}
<style lang="stylus" is:global>
  #comments {
    width: calc(100% - 20px);
    margin: 10px auto;
    background: var(--color-wrap);
    border-radius: 5px;

    a {
      color: var(--color-link);
    }
  }
</style>
