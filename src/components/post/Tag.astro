---
import { Icon } from "astro-icon/components";

type Props = {
  tags: string[];
};

const { tags } = Astro.props;
---

<ul class="article-tag-list">
  {
    tags.map((tag) => {
      return (
        <li class="article-tag-list-item">
          <Icon name="tabler:tag"/>
          <a class="article-tag-list-link" href={`/tags/${tag}`} rel="tag">
            {tag}
          </a>
        </li>
      );
    })
  }
</ul>

<style>
  .article-tag-list {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
  }
  .article-tag-list-link {
    color: var(--red-1);
    text-decoration: none;
  }
  .article-tag-list-item {
    flex-shrink: 0;
    text-decoration: none;
    text-transform: uppercase;
    background: var(--red-5);
    color: var(--red-1);
    border-radius: 20px;
    padding: 8px 15px;
    margin: 5px;
    display: flex;
    align-items: center;
    font-size: 12px;
  }
</style>
